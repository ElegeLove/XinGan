/* pages/information_physical/information_physical.wxss */
.nav{
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 50rpx;
}
.nav view image{
  width: 40rpx;height: 40rpx;
}
.nav view:first-child,.nav view:last-child{
  text-align: center;
  color: #F87628;
}
.xian{
  width: 300rpx;height: 4rpx;
  background: #F87628;
  margin: 0 20rpx;
}
.nav_font view:last-child{
  color: #999999;
}
.nav_font view{
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #F87628;
  line-height: 36rpx;
}
.input input{
  width: 600rpx;height: 100rpx;
  margin: 40rpx auto;
  padding-left: 40rpx;
  background: #F5F5F5;
  border-radius: 10px;
  padding-left: 40rpx;
}
.input textarea{
  width: 600rpx;height: 200rpx;
  margin: 60rpx auto;
  padding-top: 40rpx;
  padding-left: 40rpx;
  background: #F5F5F5;
  border-radius: 10rpx;
}
.step{
  margin: 0 auto;
}
.step>button{
  color: #FFFEFE;
  background-color: #F87628;
  border-radius: 50rpx;
  margin-top: 180rpx;
  padding: 0;
  line-height: 100rpx;
}