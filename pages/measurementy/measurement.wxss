/* pages/mmeasurementy/measurement.wxss */
.title{
  width: 90%;
  margin: 40rpx auto;
}
.xian{
  width: 90%;height: 1rpx;
  background-color: #DCDCDC;
  margin: 0 auto;
}
.answer{
  width: 100%;height: 79rpx;
  margin: 0 auto;
}
.answer radio-group view{
  margin: 40rpx 0;
}
.button{
  height: 108rpx;
  border-radius: 0;
  background-color: #F87628;
  color: #ffffff;
  position: fixed;
  bottom: 0;left: 0;right: 0;
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: 500;
  line-height: 108rpx;
  padding: 0;
}
.button1 button{
  height: 108rpx;
  border-radius: 0;
  position: fixed;
  bottom: 0;
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: 500;
  line-height: 108rpx;
  padding: 0;
}
.button1>button:first-child{
  background-color: #FFFFFF;
  color: #999999;
  border: 1px solid #E5E5E5;
  left: 0;
}
.button1>button:last-child{
  background-color: #F87628;
  color: #ffffff;
  right: 0;
}
.test{
  display: flex;
  align-items: baseline;
}
radio .wx-radio-input.wx-radio-input-checked {
  border-color: #F87628!important;
  background-color: #F87628!important;
}