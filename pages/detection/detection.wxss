/* pages/detection/detection.wxss */
.nav {
  width: 100%;
  padding: 0 40rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-family: PingFang SC;
  font-size: 34rpx;
  font-weight: 500;
  color: #333333;
  margin: 10rpx auto;
  border-bottom: 1rpx solid #f5f5f5;
  box-sizing: border-box;
}
.status_box{
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.status_box_text{
  color: rgb(255, 67, 53);
}
.status_box_tips{
  color: #999999;
  margin-top: 20rpx;
}
.equipment {
  font-weight: bold;
  color: #F87628;
}

.updata {
  font-size: 30rpx;
  color: #FF7675;
}

.heartRate,
.breathing {
  width: 480rpx;
  height: 480rpx;
  margin: 100rpx auto;
  font-weight: 500;
  font-family: PingFang SC;
  color: #FFFFFF;
  position: relative;
  z-index: 2;
}

.heartRate>image,.breathing>image{
  width: 480rpx;
  height: 480rpx;
  object-fit: contain;
  position: absolute;
  z-index: -1;
}

.heartRate>view,
.breathing>view {
  padding-top: 125rpx;
}

.heartRate>view>view:first-child,
.breathing>view>view:first-child {
  font-size: 28rpx;
  display: flex;
  justify-content: center;
}

.heartRate>view>view:last-child,
.breathing>view>view:last-child {
  display: flex;
  align-items: center;
  justify-content: center;
}

.num {
  font-size: 100rpx;
  font-family: DINOT;
  margin-bottom: 10rpx;
}

.text {
  font-size: 24rpx;
}

.fei {
  width: 38rpx;
  height: 32rpx;
}