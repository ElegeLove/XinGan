/* pages/hrv/hrv.wxss */
.view{
  width: 80%;
  margin: 0 auto;
}
/* 年月日 */
.date1{
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 36rpx 0;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
}
.date1>view>image{
  width: 14rpx;height: 24rpx;
  padding: 0 50rpx;
}
.title{
  text-align: center;
  display: flex;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
  margin-top: 60rpx;
}
.title>view:first-child{
  width: 40%;
}
.title>view:last-child{
  width: 60%;
}
/* hrv数据 */
.hrv{
  width: 85%;
  margin: 0 auto;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}
.fine_tuning_left{
  width: 130rpx;
  text-align: left;
}
.fine_tuning_ri{
  width: 71rpx;
  text-align: left;
}
.content{
  /* 整行 */
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 100rpx;
}
.graphics{
  /* 小方块 */
  width: 32rpx;height: 32rpx;
  border-radius: 10rpx;
}
.excessive{
  /* 范围外层 */
  width: 379rpx;height: 30rpx;
  background: #F87628;
  border-radius: 15rpx;
  position: relative;
}
.triangle{
  /* 三角形 */
  width: 21rpx;height: 13rpx;
  position: absolute;
  top: -13rpx;
}
.normal{
  /* 范围内层 */
  width: 179rpx;height: 30rpx;
  margin: 0 auto;
}
.colorSdnn{
  background: #9EE3F2;
}
.colorRmssd{
  background: #FEE265;
}
.colorLf{
  background: #FF6161;
}
.colorHf{
  background: #87C795;
}
.colorSd{
  background: #F9AAC9;
}
.scope{
  /* 取值范围 */
  position: absolute;
  top: -45rpx;left: 85rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666666;
}
.Sdnntext{
  margin-right: 150rpx;
}
.Lftext{
  margin-right: 137rpx;
}
.Hftext{
  margin-right: 129rpx;
}
.Sdtext{
  margin-right: 130rpx;
}